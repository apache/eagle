[
  {
    "streamId": "hadoopJmxMetricEventStream",
    "dataSource": "hadoop_jmx_datasource",
    "description": "the data stream for hadoop jmx metrics",
    "validate": false,
    "timeseries": false,
    "columns": [
      {
        "name": "host",
        "type": "STRING",
        "defaultValue": "",
        "required": true
      },
      {
        "name": "timestamp",
        "type": "LONG",
        "defaultValue": 0,
        "required": true
      },
      {
        "name": "metric",
        "type": "STRING",
        "defaultValue": "default_hadoop_jmx_metric_name",
        "required": true
      },
      {
        "name": "component",
        "type": "STRING",
        "defaultValue": "namenode",
        "required": true
      },
      {
        "name": "site",
        "type": "STRING",
        "defaultValue": "hadoop",
        "required": true
      },
      {
        "name": "value",
        "type": "DOUBLE",
        "defaultValue": 0.0,
        "required": true
      }
    ]
  }
]