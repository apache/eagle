<applications>
    <application>
        <jar>target/apache-eagle-example-app.jar</jar>
        <class>org.apache.eagle.app.base.example.ExampleAppContext</class>
        <view>webapp/app/example</view>
        <configurations>
            <configuration>
                <name>kafka.topic</name>
                <value>hdfs_audit</value>
                <description>Kafka Topic</description>
            </configuration>
            <configuration>
                <name>zookeeper.server</name>
                <displayName>Zookeeper Server</displayName>
                <value>localhost:2181</value>
                <description>Zookeeper Server address</description>
            </configuration>
        </configurations>
    </application>
    <application>
        <class>org.apache.eagle.app.base.example.ExampleApps</class>
        <jar>target/apache-eagle-example-app.jar</jar>
        <view>webapp/app/example2</view>
    </application>
</applications>